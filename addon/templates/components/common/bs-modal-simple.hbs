{{#if inDom}}
  {{#maybe-in-element destinationElement _renderInPlace}}
    {{#bs-modal/dialog
      onClose=(action "close")
      fade=this.fade
      showModal=this.showModal
      id=this.modalId
      keyboard=this.keyboard
      size=@size
      backdropClose=this.backdropClose
      class=@class
      inDom=this.inDom
      paddingLeft=this.paddingLeft
      paddingRight=this.paddingRight
      centered=(bs-eq this.position "center")
    }}
      {{bs-modal/header title=@title closeButton=this.closeButton onClose=(action "close")}}
      {{#bs-modal/body}}
        {{yield
          (hash
            close=(action "close")
            submit=(action "submit")
          )
        }}
      {{/bs-modal/body}}
      {{bs-modal/footer
        closeTitle=this.closeTitle
        submitTitle=@submitTitle
        submitButtonType=this.submitButtonType
        onClose=(action "close")
        onSubmit=(action "submit")
      }}
    {{/bs-modal/dialog}}

    <div>
      {{#if this.showBackdrop}}
        <div class="modal-backdrop {{if this.fade "fade"}} {{if this.showModal this.showClass}}" id={{this.backdropId}}></div>
      {{/if}}
    </div>
  {{/maybe-in-element}}
{{/if}}
