{{yield
  (hash
    button=(component this.buttonComponent dropdown=this onClick=(action "toggleDropdown"))
    toggle=(component this.toggleComponent dropdown=this inNav=inNav onClick=(action "toggleDropdown"))
    menu=(component this.menuComponent
      isOpen=this.isOpen
      direction=this.direction
      inNav=@inNav
      toggleElement=this.toggleElement
      dropdownElementId=this.elementId
    )
    toggleDropdown=(action "toggleDropdown")
    openDropdown=(action "openDropdown")
    closeDropdown=(action "closeDropdown")
    isOpen=this.isOpen
  )
}}
